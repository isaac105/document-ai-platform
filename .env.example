# .env
TZ=Asia/Seoul
CORS_ORIGIN=
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=  # need to fill
DB_PASSWORD=  # need to fill
DB_DATABASE=  # need to fill

# LLM Configuration (FactChat)
LLM_PROVIDER=factchat
LLM_BASE_URL=https://factchat-cloud.mindlogic.ai
LLM_CHAT_PATH=/v1/api/openai/chat/completions
LLM_API_KEY=  # need to fill
LLM_MODEL=gpt-5-mini
LLM_EMBEDDING_PATH=/v1/api/openai/embeddings
LLM_EMBEDDING_MODEL=text-embedding-3-small

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
